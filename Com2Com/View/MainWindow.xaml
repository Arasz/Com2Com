<Window x:Class="Com2Com.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Com2Com"
        mc:Ignorable="d"
        x:Name="mainWindow"
        Title="Com2Com" MinHeight="250" MinWidth="300" 
        Width="{Binding ElementName=mainWindow, Path=MinWidth}"
        Height="{Binding ElementName=mainWindow, Path=MinHeight}">
    
        <Frame x:Name="mainFrame" NavigationUIVisibility="Hidden"/>
    
</Window>
